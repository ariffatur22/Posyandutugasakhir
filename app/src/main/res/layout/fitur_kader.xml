<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiturKader">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Silahkan Memilih Fitur Untuk Pengoperasian Sistem"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="7pt"
            android:textStyle="bold"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/anak"
                android:scaleType="fitCenter"
                android:background="@null"
                android:id="@+id/kelola_Anak"
                android:onClick="kelolaAnak"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ibu"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:id="@+id/kelola_Ibu"
                android:onClick="kelolaIbu"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ibuhamil"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:id="@+id/kelola_Ibu_Hamil"
                android:onClick="kelolaIbuHamil"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Anak"
                android:textColor="#FF000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Ibu"
                android:textColor="#FF000000"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Ibu Hamil"
                android:textColor="#FF000000"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/timbangbalita"
                android:scaleType="fitCenter"
                android:background="@null"
                android:id="@+id/kelola_Timbang_Balita"
                android:onClick="kelolaTimbangBalita"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/imunisasi"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:id="@+id/kelola_Imunisasi"
                android:onClick="kelolaImunisasi"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/psgvita"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:id="@+id/kelola_Psg"
                android:onClick="kelolaPsg"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kelola Penimbangan Balita"
                android:textColor="#FF000000"
                />
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kelola Imunisasi dan Data Bayi Lahir"
                android:textColor="#FF000000"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kelola PSG dan Vitamin A"
                android:textColor="#FF000000"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rujukan"
                android:scaleType="fitCenter"
                android:background="@null"
                android:id="@+id/kelola_Rujukan"
                android:onClick="kelolaRujukan"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/laporan"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:id="@+id/kelola_Laporan"
                android:onClick="kelolaLaporan"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/kks"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:id="@+id/kelola_Kks"
                android:onClick="kelolaKks"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Rujukan"
                android:textColor="#FF000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Laporan"
                android:textColor="#FF000000"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola KKS"
                android:textColor="#FF000000"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>